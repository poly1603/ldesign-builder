{
  "name": "@ldesign/vue3-lib-example",
  "version": "1.0.0",
  "description": "Vue 3 组件库示例 - 使用 @ldesign/builder 打包",
  "keywords": [
    "vue3",
    "component-library",
    "ldesign",
    "builder"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./es/components/Button/index.vue.css": "./es/components/Button/index.vue.css",
    "./es/components/Input/index.vue.css": "./es/components/Input/index.vue.css",
    "./es/index.css": "./es/index.css",
    "./lib/components/Button/index.vue.css": "./lib/components/Button/index.vue.css",
    "./lib/components/Input/index.vue.css": "./lib/components/Input/index.vue.css",
    "./lib/index.css": "./lib/index.css",
    "./dist/index.css": "./dist/index.css",
    "./dist/index.min.css": "./dist/index.min.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "clean": "rimraf es lib dist"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@vue/compiler-sfc": "^3.4.0",
    "vue": "^3.4.0",
    "typescript": "^5.7.3",
    "less": "^4.4.1"
  }
}