{
  "name": "@ldesign/vue2-components-example",
  "version": "1.0.0",
  "description": "Vue2 组件库示例 - 展示如何使用 @ldesign/builder 打包 Vue2 组件库",
  "keywords": [
    "vue2",
    "components",
    "ui",
    "library",
    "ldesign",
    "builder",
    "example"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./button": {
      "types": "./es/button/index.d.ts",
      "import": "./es/button/index.js",
      "require": "./lib/button/index.cjs"
    },
    "./button/*": {
      "types": "./es/button/*.d.ts",
      "import": "./es/button/*.js",
      "require": "./lib/button/*.cjs"
    },
    "./card": {
      "types": "./es/card/index.d.ts",
      "import": "./es/card/index.js",
      "require": "./lib/card/index.cjs"
    },
    "./card/*": {
      "types": "./es/card/*.d.ts",
      "import": "./es/card/*.js",
      "require": "./lib/card/*.cjs"
    },
    "./input": {
      "types": "./es/input/index.d.ts",
      "import": "./es/input/index.js",
      "require": "./lib/input/index.cjs"
    },
    "./input/*": {
      "types": "./es/input/*.d.ts",
      "import": "./es/input/*.js",
      "require": "./lib/input/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder",
    "dev": "ldesign-builder --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "vue": "^2.6.0 || ^2.7.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}