{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "esm",
    "cjs",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/adapters/esbuild/**",
    "src/adapters/swc/**"
  ]
}
